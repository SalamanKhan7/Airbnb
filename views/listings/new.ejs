<% layout("/layouts/boilerplate") %>
<body>
  <br />
  <br />
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a new listing:</h3>
      <form
        method="POST"
        action="/listings"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a catchy title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please choose a title.</div>
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea name="listing[description]" class="form-control" required>
          </textarea>
          <div class="invalid-feedback">Please choose a description.</div>
        </div>
        <div class="mb-3">
          <lable for="image" class="form-label">Image</lable>
          <input
            type="text"
            name="listing[image]"
            placeholder="enter url/Link"
            class="form-control"
          />
          <div class="invalid-feedback">Please choose a image.</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input 
            name="listing[price]" placeholder="1200" class="form-control"
            required />
            <div class="invalid-feedback">Please choose a price.</div>
          </div>

          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please choose a country.</div>
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-label">Location</lable>
          <input
            type="text"
            name="listing[location]"
            placeholder="Jaipur, Rajasthan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please choose a location.</div>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </div>
  </div>
  <br />
  <br />
</body>
